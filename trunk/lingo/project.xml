      <id>hsqldb</id>
      <version>1.7.3.3</version>
      <properties>
        <optional>true</optional>
      </properties>
    </dependency>

    <!-- for unit test cases -->
    <dependency>
      <id>junit</id>
      <version>3.8.1</version>
    </dependency>

    <dependency>
      <id>backport175</id>
      <version>1.0</version>
    </dependency>
   <dependency>
