    </dependency>    
    <dependency>
        <groupId>org.apache.xbean</groupId>
        <artifactId>xbean-spring</artifactId>
        <version>2.2</version>
        <optional>true</optional>
    </dependency>

    <!-- JCA and TransactionManager -->
    <dependency>
      <id>jencks+all</id>
      <version>1.1</version>
      <properties>
        <lib>true</lib>
      </properties>
    </dependency>
    <dependency>
      <id>concurrent</id>
      <version>1.3.4</version>
    </dependency>

    <!-- default XML marshaller -->
    <dependency>
      <id>xstream</id>
      <version>1.1.2</version>
    </dependency>
    <dependency>
      <groupId>xmlpull</groupId>
      <artifactId>xmlpull</artifactId>
