  <build>
    <nagEmailAddress>dev@lingo.codehaus.org</nagEmailAddress>
    <sourceDirectory>src/main/java</sourceDirectory>
    <unitTestSourceDirectory>src/main/test</unitTestSourceDirectory>

    <integrationUnitTestSourceDirectory />
    <aspectSourceDirectory />

	  <unitTest>
      <resources>
        <resource>
          <directory>src/main/test</directory>
          <includes>
            <include>**/*.properties</include>
            <include>**/*.xml</include>
          </includes>
        </resource>
      </resources>
      <includes>
        <include>**/*Test.*</include>
        <include>**/*TestCase.*</include>
      </includes>
      <excludes>
        <!--  not got backport working yet -->
        <exclude>**/ExampleAsyncWithBackport175Test.*</exclude>
        <exclude>**/WriteLockDeadLockTest.*</exclude>
        
        <!--  http://jira.codehaus.org/browse/LINGO-25 -->
        <exclude>**/JmsQueueTest.*</exclude>
      </excludes>
    </unitTest>

    <resources>
      <resource>
        <directory>src/conf</directory>
        <includes>
          <include>**/*</include>
        </includes>
      </resource>
    </resources>
  </build>

  <reports>
    <!--
